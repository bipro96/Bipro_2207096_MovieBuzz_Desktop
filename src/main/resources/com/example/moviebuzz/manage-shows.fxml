<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="850.0" spacing="20.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.moviebuzz.ManageShowsController">
    <children>
        <Label text="Manage Scheduled Shows">
            <font>
                <Font name="System Bold" size="22.0" />
            </font>
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </Label>

        <TableView fx:id="showsTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colMovie" text="Movie Title" />
                <TableColumn fx:id="colDate" text="Date" />
                <TableColumn fx:id="colTime" text="Time" />
                <TableColumn fx:id="colPrice" text="Price (BDT)" />
                <TableColumn fx:id="colStatus" text="Status" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <HBox alignment="CENTER" spacing="20.0" style="-fx-padding: 20;">
            <children>
                <Button onAction="#handleViewBookings" prefWidth="120.0" text="View Bookings" />
                <Button onAction="#handleCancelAndRefund" text="Cancel Show &amp; Refund All" />
                <Button onAction="#handleBack" prefWidth="100.0" text="Back" />
            </children>
        </HBox>
    </children>
</VBox>
