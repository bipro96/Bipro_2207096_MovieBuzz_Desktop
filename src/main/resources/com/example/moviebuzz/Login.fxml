<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.moviebuzz.LoginController">
    <children>
        <VBox alignment="CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label fx:id="loginHeader" text="User Login">
                    <font>
                        <Font name="System Bold" size="32.0" />
                    </font>
                </Label>

                <VBox alignment="CENTER" maxWidth="300.0" spacing="10.0">
                    <children>
                        <TextField fx:id="usernameField" prefHeight="40.0" prefWidth="300.0" promptText="Username"  />
                        <PasswordField fx:id="passwordField" prefHeight="40.0" prefWidth="300.0" promptText="Password"  />
                    </children>
                </VBox>

                <Label fx:id="errorMessageLabel" textFill="RED" visible="false" wrapText="true" />

                <Button onAction="#handleLogin" prefHeight="40.0" prefWidth="300.0"  text="Sign In" />

                <Button fx:id="newAccountButton" onAction="#goToSignUp" prefWidth="100.0"  text="New" />

                <Button fx:id="backToUserButton" onAction="#handleAdminToggle" prefWidth="100.0"  text="Back" visible="false" />
            </children>
        </VBox>

        <Button fx:id="adminToggleButton" layoutX="780.0" layoutY="20.0" onAction="#handleAdminToggle" text="Admin Portal" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0" />
    </children>
</AnchorPane>
